@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Burgerland Kayıt</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
    <div class="page-content">
        <div class="form-v6-content">
            <div class="form-left">
                <img src="~/colorlib-regform-32/images/Sauce1.jpg" alt="form" style="width:484px; height:584px">
            </div>
            <form class="form-detail" method="post" asp-action="Index">
                <h2>Yeni Kullanıcı Kaydı</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <input type="text" id="name" asp-for="Name" class="input-text" placeholder="Adınız" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <input type="text" id="surname" asp-for="Surname" class="input-text" placeholder="Soyadınız" required>
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <input type="text" id="username" asp-for="Username" class="input-text" placeholder="Kullanıcı Adınız" required>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <input type="email" id="mail" asp-for="Mail" class="input-text" placeholder="Email Adresiniz" required>
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <input type="password" id="password" asp-for="Password" class="input-text" placeholder="Şifreniz" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button class="btn btn-primary">Kayıt Ol</button>
            </form>
        </div>
    </div>
</body>
</html>